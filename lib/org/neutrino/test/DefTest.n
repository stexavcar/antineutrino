def test_local_definitions() {
  test_simple_local_definitions();
  test_block_nested_local_definitions();
  test_local_function_declarations();
}

def test_simple_local_definitions() {
  print("Testing simple local definitions");
  def x := 4;
  assert_true(x = 4);
  def y := 8;
  assert_true(y = 8);
}

def test_block_nested_local_definitions() {
  print("Testing block nested local definitions");
  def a := 1;
  def b := 2;
  assert_true(a = 1);
  assert_true(b = 2);
  {
    def a := 3;
    def b := 4;
    assert_true(a = 3);
    assert_true(b = 4);
  }
  assert_true(a = 1);
  assert_true(b = 2);
}

def test_local_function_declarations() {
  print("Testing local function declarations");
  def double(x) -> 2 * x;
  assert_equal(16, double(8));
  def add_4(y) { y + 4; }
  assert_equal(7, add_4(3));
  def punt -> 5;
  assert_equal(5, punt());
}
