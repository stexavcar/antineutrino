def test_primitives() {
  test_integer_operators();
  test_singletons();
  test_conditionals();
  test_number_encoding();
}

def test_integer_operators() {
  print("Testing integer operators");
  assert_true((1 + 1) = 2);
  assert_true((1 + 2) = 3);
  assert_true((2 + 1) = 3);
  assert_true(1 < 2);
}

def test_singletons() {
  print("Testing singletons");
  assert_true(true);
  assert_true(false.negate());
}

def test_conditionals() {
  print("Testing conditionals");
  assert_true((if true then 1 else 2) = 1);
  assert_true((if false then 1 else 2) = 2);
  assert_true((if true then 1) = 1);
  assert_true((if false then 1) = null);
}

def tne_sum(n) -> if n = 0 then 0 else n + tne_sum(n - 1);

def test_number_encoding() {
  print("Testing number encoding");
  assert_true(tne_sum(256) = 32896);
}
