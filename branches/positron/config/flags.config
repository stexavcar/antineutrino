flags (
  name = 'common',
  dialect = ['ansi', 'pedantic'],
  codegen = ['no-exceptions', 'no-rtti'],
  warnings = ['all', 'extra', 'no-unused-parameter', 'no-non-virtual-dtor'],
  wordsize = wordsize
)

flags (
  name = 'debug',
  extend = 'common',
  defines = ['DEBUG', 'M%s' % wordsize],
  optimize = 'no',
  debug = 'on',
)

flags (
  name = 'release',
  extend = 'common',
  defines = ['RELEASE', 'M%s' % wordsize],
  optimize = 'speed',
  debug = 'off',
)
