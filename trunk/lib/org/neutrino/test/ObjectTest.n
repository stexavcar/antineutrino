def test_objects() {
  test_records();
  test_record_methods();
}

def test_records() {
  print("Testing records");
  def o1 := new { a := 10, b := 12 };
  assert_equal(10, o1.a());
  assert_equal(12, o1.b());
  def o2 := new { a := "x", b := "y", c := "z" };
  assert_equal("x", o2.a());
  assert_equal("y", o2.b());
  assert_equal("z", o2.c());
  new { };
}

def inc(cnt) -> cnt.set(cnt.get() + 1);

def test_record_methods() {
  print("Testing record methods");
  def cnt := ref(0);
  def inc := fn () -> cnt.set(cnt.get() + 1);
  assert_equal(0, cnt.get());
  def ov := new { aa := inc(), bb := inc() };
  assert_equal(2, cnt.get());
  assert_equal(1, ov.aa());
  assert_equal(2, ov.bb());
  def om := new { cc -> inc(), dd -> inc() };
  assert_equal(2, cnt.get());
  assert_equal(3, om.cc());
  assert_equal(3, cnt.get());
  assert_equal(4, om.cc());
  assert_equal(4, cnt.get());
  
}
