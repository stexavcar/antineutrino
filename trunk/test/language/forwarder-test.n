internal def make_forwarder();
internal def set_target(value);

def simple_forwarder() {
  def x := "foo"路make_forwarder();
  assert x = "foo";
  assert |x| = 3;
  assert (x + "bar") = "foobar";
  x路set_target("nirk");
  assert x = "nirk";
  assert |x| = 4;
  assert (x + "bar") = "nirkbar";
}

def record_forwarder() {
  def r := new { x: 2, y: 3 };
  def f := r路make_forwarder();
  assert f = r;
  assert f.x = 2;
  assert f.y = 3;
  f路set_target(null);
  assert f = null;
}

def main() {
  simple_forwarder();
  record_forwarder();
}
