internal def make_forwarder();
internal def set_target(value);

def simple_forwarder() {
  def x := "foo"路make_forwarder();
  assert_equals("foo", x);
  assert_equals(3, |x|);
  assert_equals("foobar", x + "bar");
  x路set_target("nirk");
  assert_equals("nirk", x);
  assert_equals(4, |x|);
  assert_equals("nirkbar", x + "bar");
}

def record_forwarder() {
  def r := new { x: 2, y: 3 };
  def f := r路make_forwarder();
  assert_equals(r, f);
  assert_equals(2, f.x());
  assert_equals(3, f.y());
  f路set_target(null);
  assert_equals(null, f);
}

def main() {
  simple_forwarder();
  record_forwarder();
}
