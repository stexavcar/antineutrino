def local_test() {
  var str := 18;
  @local def local_str := "abc" in {
    str := local_str;
    assert str = "abc";
    assert str[0] = "a";
    assert str[1] = "b";
    assert str[2] = "c";
    assert |str| = 3;
  };
  assert str = null;
}

def nested_locals() {
  var outer := 10;
  { 
    @local def a := "x";
    @local def b := a;
    @local def c := b;
    @local def d := c;
    assert d = "x";
    outer := d;
  }
  assert outer = null;
}

def main() {
  local_test();
  nested_locals();
}
