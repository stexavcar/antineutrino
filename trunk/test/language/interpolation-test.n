def interpolation_test() {
  assert_equals("abc", "${"a"}${"b"}${"c"}");
  assert_equals("aabb", "a${"a${"b${"b"}"}"}");
}

def local_test(a, b, c) {
  assert_equals("[1]", "[${a}]");
  assert_equals("3-2-1", "${c}-${b}-${a}");
}

def trailing_whitespace_test() {
  def x := 4;
  assert_equals("[ 4 ]", "[ ${x} ]");
}

def main() {
  interpolation_test();
  local_test(1, 2, 3);
  trailing_whitespace_test();
}
