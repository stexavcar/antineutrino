def test_number_syntax() {
  assert 1 234 567 = 1234567;
  assert 4 5 6 7 = 4567;
}

def test_addition() {
  assert (1 + 1) = 2;
  assert (2 + 1) = 3;
  assert (1 + 2) = 3;
  assert (500 + 500) = 1000;
}

def test_multiplication() {
  assert (1 × 1) = 1;
  assert (1 × 0) = 0;
  assert (2 × 50) = 100;
  assert (50 × 2) = 100;
}

def main() {
  test_number_syntax();
  test_addition();
  test_multiplication();
}
