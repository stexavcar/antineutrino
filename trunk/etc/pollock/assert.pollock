def @assert(cause=neutrino::cnUnknown) ${left:expr} == ${right:expr}
  POLLOCK_ASSERT_EQ(${left}, ${right}, ${cause})

def @assert(cause=neutrino::cnUnknown) ${left:expr} != ${right:expr}
  POLLOCK_ASSERT_NE(${left}, ${right}, ${cause})

def @assert(cause=neutrino::cnUnknown) is < ${Type:ident} > \( ${value:expr} \)
  POLLOCK_ASSERT_IS(${Type}, ${value}, ${cause})

def @assert(cause=neutrino::cnUnknown) ${operation:expr}
  ASSERT(${operation})
