def test_number_syntax() {
  assert 1 234 567 = 1234567;
  assert 4 5 6 7 = 4567;
}

def test_addition() {
  assert (1 + 1) = 2;
  assert (2 + 1) = 3;
  assert (1 + 2) = 3;
  assert (500 + 500) = 1000;
}

def test_multiplication() {
  assert (1 × 1) = 1;
  assert (1 × 0) = 0;
  assert (2 × 50) = 100;
  assert (50 × 2) = 100;
}

def test_interval() {
  def inter := 7 .. 13;
  assert |inter| = 6;
  assert inter[0] = 7;
  assert inter[1] = 8;
  assert inter[2] = 9;
  assert inter[3] = 10;
  assert inter[4] = 11;
  assert inter[5] = 12;
}

def main() {
  test_number_syntax();
  test_addition();
  test_multiplication();
  test_interval();
}
